section(id='contact')
  div(class='flex flex-col p-6 pt-12 md:flex-row justify-center bg-secondary rounded-t-2xl h-80v md:h-60v')
    div(class='md:w-2/6 my-auto md:p-0 md:pr-20 space-y-4')
        h3(class='text-xs') CONTACT US
        h2(class='font-bold text-4xl md:text-5xl lg:text-6xl') Get in touch
        p(class='leading-5') Feel free to contact us any time. We will get back to you as soon as we can.
    div(class='relative md:w-1/4')
      div(class='absolute -translate-x-16 translate-y-20 bg-accent w-32 h-32 rounded-full')
      div(class='flex flex-col justify-center my-auto bg-background-primary rounded-lg h-50v z-10 relative md:my-auto')
        form(action='https://api.web3forms.com/submit' method='POST')
          input(type='hidden' name='access_key' value='cfe4435d-b477-43a0-a428-373551ea3af5')
          input(type='hidden' name='subject' value='Hello!')

          div(class='flex flex-col space-y-4 p-6 md:mx-auto')

            div(class='flex flex-row')
              div(class='flex flex-col w-1/2 pr-2')
                span(class='text-xs') First Name
                input(class='bg-background-secondary h-8 rounded-sm' name='name' type='text')
              div(class='flex flex-col w-1/2 pl-2')
                span(class='text-xs') Last Name
                input(class='bg-background-secondary h-8 rounded-sm' name='surname' type='text')

            div(class='flex flex-col')
              span(class='text-xs') Company Name
              input(class='bg-background-secondary h-8 rounded-sm' name='from_name' type='text')
            input(class='bg-background-secondary h-8 rounded-sm' name='from_name' type='hidden' value='Company')
            div(class='flex flex-col')
              span(class='text-xs') Email
              input(class='bg-background-secondary h-8 rounded-sm' name='email' type='email')

            div(class='flex flex-col')
              span(class='text-xs') Message
              input(class='bg-background-secondary h-24 rounded-sm' name='message' type='text')

            button(class='bg-accent h-12 text-black rounded-xl' type='submit')
              div(class='flex align-center justify-center my-auto space-x-2')
                i(class='material-icons') mail_outline
                span(class='text-sm') Send message
            